# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Aplicacao

GET		/reiniciar								controllers.Application.reiniciar()
POST    /disciplinaPeriodo/:period/:name        controllers.Application.disciplinaPeriodo(period: Integer, name: String)
POST   	/removerCadeira/name                    controllers.Application.removeDisciplinaPeriodo(name: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
